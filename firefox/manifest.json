{
  "manifest_version": 2,
  "name": "Hotstar Ad Muter",
  "version": "1.1",
  "description": "Automatically mutes Hotstar ads",
  "icons": {
    "48": "48.png",
    "128": "128.png"
  },
  "permissions": [
    "tabs",
    "webRequest",
    "webRequestBlocking",
    "storage",
    "*://*.hotstar.com/*",
    "*://bifrost-api.hotstar.com/*"
  ],
  "background": {
    "scripts": ["background.js"],
    "persistent": true
  }
}