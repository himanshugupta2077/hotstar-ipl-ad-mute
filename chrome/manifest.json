{
  "manifest_version": 3,
  "name": "Hotstar Ad Muter",
  "version": "1.0",
  "description": "Automatically mutes Hotstar ads",
  "permissions": [
    "webRequest",
    "tabs",
    "storage"
  ],
  "host_permissions": ["*://*.hotstar.com/*"],
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "48": "48.png",
    "128": "128.png"
  }
}
